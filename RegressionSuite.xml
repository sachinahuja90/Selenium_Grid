<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="RegressionSuite">

	<listeners>
		<listener
			class-name="com.nag.nagp.testListeners.TestListener" />
	</listeners>

	<!-- Run test method on group "selenium" only -->
	<test name="Test Application - Firefox">
		<parameter name="browser" value="chrome" />
		<groups>
			<run>
				<include name="Search" />
				<include name="SignUp" />
				<include name="Login" />
				<include name="Home" />
			</run>
		</groups>

		<classes>
			<class name="com.nag.nagp.testcases.Test_AmazonApp" />
		</classes>

	</test>

	<!-- Run test method on group "selenium" only -->
	<test name="Test Application - Chrome">
		<parameter name="browser" value="firefox" />
		<groups>
			<run>
				<include name="Search" />
				<include name="SignUp" />
				<include name="Login" />
				<include name="Home" />
			</run>
		</groups>

		<classes>
			<class name="com.nag.nagp.testcases.Test_AmazonApp" />
		</classes>

	</test>
</suite> <!-- Suite -->
